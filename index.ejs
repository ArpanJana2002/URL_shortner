<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Document</title>
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>URL shortner</h1>
        <form action="/shorturl" method="POST" class="my-4 form-inline">
            <label for="EntireURL" class="sr-only">URL</label>
            <input require placeholder="URL" name="EntireURL" id="EntireURL" class="form-control col  mr-2">
            <button  class="btn btn-success" type="submit">Shorten</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>
                        Entire URL
                    </th>
                    <th>
                        Short URL
                    </th>
                    <th>
                        Click
                    </th>
                </tr>
            </thead>
            <tbody>
                <% shorturl.forEach(shorturl => {
                    %>
                    <tr>
                    <td>
                        <a href="<%= shorturl.Entire %>"><%= shorturl.Entire %></a>
                    </td>
                    <td>
                        <a href="<%= shorturl.short %>"><%= shorturl.short %></a>
                    </td>
                    <td>
                        <%= shorturl.click %>
                    </td>
                </tr>
                <%}) %>
                <tr>
                    <td>
                        <a href="https://www.whatsapp.com/">https://www.whatsapp.com/</a>
                    </td>
                    <td>
                        <a href="/120410">120410</a>
                    </td>
                    <td>
                        10
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>

</html>